# MQTT Service Configuration
# Copy this file to .env and update values as needed

# Service Configuration
PORT=3000
NODE_ENV=development

# MQTT Broker Configuration (Local Docker)
MQTT_HOST=localhost
MQTT_PORT=1883
MQTT_WS_PORT=9001

# Device Configuration
DEVICE_ID=KITCHEN-ESP32-LED1
TOPIC_PREFIX=iot

# MongoDB is no longer needed in mqtt-service
# All data is now sent to Kafka and processed by devices-service

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Kafka Configuration (for event-driven architecture)
KAFKA_BROKERS=localhost:29092

# MQTT Topics Configuration
TOPIC_TELEMETRY=iot/+/telemetry
TOPIC_CONTROL=iot/+/control
TOPIC_STATUS=iot/+/status
TOPIC_COMMAND=iot/+/command

# Security Configuration
ALLOW_ANONYMOUS=true
MQTT_USERNAME=
MQTT_PASSWORD=

# Logging Configuration
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/mqtt-service.log

# Performance Configuration
MAX_CONNECTIONS=1000
MAX_INFLIGHT_MESSAGES=100
MESSAGE_RETENTION_DAYS=30

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000